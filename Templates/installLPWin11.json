{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },


    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
            "forAvd2": "true",
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "/subscriptions/292d7caa-a878-4de8-b774-689097666272/resourcegroups/akas-aib/providers/Microsoft.ManagedIdentity/userAssignedIdentities/akas-aibIdentity01": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 800,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D2s_v3",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "windows-11",
                    "sku": "win11-21h2-ent",
                    "version": "latest"
            },
            "customize": [
                   {
                        "destination": "C:\\installLanguagePacks.ps1",
                        "name": "installLanguagePacks",
                        "sourceUri": "https://raw.githubusercontent.com/achawla5/PSScripts/main/languagePacks.ps1",
                        "type": "File"
                    },
                    {
                        "inline": [
                            "C:\\installLanguagePacks.ps1 -LanguageList \"Spanish (Spain)\" -WindowsVersion \"Windows 11\""
                        ],
                        "name": "LanguagePacksPowershell",
                        "runAsSystem": true,
                        "runElevated": true,
                        "type": "PowerShell"
                    },
                    {
                        "name": "",
                        "restartCheckCommand": "",
                        "restartCommand": "",
                        "restartTimeout": "10m",
                        "type": "WindowsRestart"
                    },
                    {
                        "destination": "C:\\SetDefaultLanguage.ps1",
                        "name": "setDefaultLanguage",
                        "sourceUri": "https://raw.githubusercontent.com/achawla5/PSScripts/main/setDefaultLang.ps1",
                        "type": "File"
                    },
                    {
                        "inline": [
                            "C:\\SetDefaultLanguage.ps1 -Language \"Spanish (Spain)\""
                        ],
                        "name": "setDefaultLanguagePowershell",
                        "runAsSystem": true,
                        "runElevated": true,
                        "type": "PowerShell"
                    },
                    {
                        "name": "",
                        "restartCheckCommand": "",
                        "restartCommand": "",
                        "restartTimeout": "5m",
                        "type": "WindowsRestart"
                    }
            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/292d7caa-a878-4de8-b774-689097666272/resourceGroups/akas-aib/providers/Microsoft.Compute/galleries/akasaibsigv2/images/akaswvdaibV2/versions/1.0.1",
                    "runOutputName": "aibimg04",
                    "artifactTags": {
                        "source": "wvd11",
                        "baseosimg": "windows11"
                    },
                    "replicationRegions": [
                      "westus2"

                    ]
                }
            ]
            }
        }
    ]
}    







