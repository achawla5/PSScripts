{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
      "imageTemplateName": {
        "type": "string"
        },
        "api-version": {
          "type": "string"
        },
        "svclocation": {
            "type": "string"
        }
    },
    
    "variables": {
    },


    "resources": [
      {
        "name": "[parameters('imageTemplateName')]",
        "type": "Microsoft.VirtualMachineImages/imageTemplates",
        "apiVersion": "[parameters('api-version')]",
        "location": "[parameters('svclocation')]",
        "dependsOn": [],
        "tags": {
            "forAvd2": "true",
            "imagebuilderTemplate": "AzureImageBuilderSIG",
            "userIdentity": "enabled"
                },
            "identity": {
                "type": "UserAssigned",
                        "userAssignedIdentities": {
                        "/subscriptions/292d7caa-a878-4de8-b774-689097666272/resourcegroups/akas-aib/providers/Microsoft.ManagedIdentity/userAssignedIdentities/akas-aibIdentity01": {}
                            
                    }
                    },
        
        "properties": {
            "buildTimeoutInMinutes" : 120,

            "vmProfile": 
                    {
                    "vmSize": "Standard_D2s_v3",
                    "osDiskSizeGB": 127
                    },
        
            "source": {
                "type": "PlatformImage",
                    "publisher": "MicrosoftWindowsDesktop",
                    "offer": "windows-10",
                    "sku": "20h1-ent",
                    "version": "latest"
            },
            "customize": [

                     {
                        "destination": "C:\\AVD\\ConfigureSessionTimeouts.ps1",
                        "name": "ConfigureSessionTimeouts",
                        "sourceUri": "https://raw.githubusercontent.com/achawla5/PSScripts/main/ConfigureSessionTimeoutsV2.ps1",
                        "type": "File"
                    },
                    {
                        "inline": [
                             "C:\\AVD\\ConfigureSessionTimeouts.ps1 -SessionTimeoutTypes \"Set time limit for disconnected sessions\", \"Set time limit for active but idle Remote Desktop Services sessions\", \"Set time limit for logoff of RemoteApp sessions\", \"Set time limit for active Remote Desktop Services sessions\", \"End session when time limits are reached\" -SessionTimeoutValues \"10\", \"20\", \"30\", \"40\", \"1\""
                        ],
                        "name": "ConfigureSessionTimeoutsPowershell",
                        "runAsSystem": true,
                        "runElevated": true,
                        "type": "PowerShell"
                    },
                    {
                        "type": "WindowsUpdate"
                    }
		
            ],
            "distribute": 
            [
                {   
                    "type": "SharedImage",
                    "galleryImageId": "/subscriptions/292d7caa-a878-4de8-b774-689097666272/resourceGroups/akas-aib/providers/Microsoft.Compute/galleries/akasaibsig1/images/akaswin10wvd/versions/1.0.10",
                    "runOutputName": "aibimg04",
                    "artifactTags": {
                        "source": "wvd10",
                        "baseosimg": "windows10"
                    },
                    "replicationRegions": [
                      "westus2"

                    ]
                }
            ]
            }
        }
    ]
}    







